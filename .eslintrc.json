{
  "env": {
    "es2021": true,
    "node": true
  },
  "root": true,
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:import/typescript",
    "prettier/prettier",
    "plugin:prettier/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "always",
      {
        "ignorePackages": true,
        "pattern": {
          "ts": "never"
        }
      }
    ]
  }
}
